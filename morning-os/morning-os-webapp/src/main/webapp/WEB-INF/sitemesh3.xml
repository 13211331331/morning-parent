<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
    <!-- 排除，不进行装饰的路径 -->
    <mapping path="/pass/**" exclue="true"/>
    <mapping path="/druid/*" exclue="true"/>
    <mapping path="/*/ajax/**" exclue="true"/>
    
  	<!-- 前端商城布局 -->
    <mapping>
      <path>/*/*</path>
      <path>/*</path>
      <path>/index</path>
      <path>/</path>
      <decorator>/WEB-INF/layouts/web/default.jsp</decorator>
    </mapping>
    
    <!-- 自定义 tag 规则 -->
    <content-processor>
      <tag-rule-bundle class="com.pussinboots.morning.common.tagrulebundle.ExtHtmlTagRuleBundle" />
    </content-processor>
    
</sitemesh>
