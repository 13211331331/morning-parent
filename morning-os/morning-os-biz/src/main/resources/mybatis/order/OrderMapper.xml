<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.pussinboots.morning.os.modules.order.mapper.OrderMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.pussinboots.morning.os.modules.order.entity.Order">
		<id column="order_id" property="orderId" />
		<result column="order_number" property="orderNumber" />
		<result column="user_id" property="userId" />
		<result column="pay_type" property="payType" />
		<result column="shipment_time" property="shipmentTime" />
		<result column="shipment_type" property="shipmentType" />
		<result column="shipment_amount" property="shipmentAmount" />
		<result column="invoice_type" property="invoiceType" />
		<result column="invoice_title" property="invoiceTitle" />
		<result column="order_status" property="orderStatus" />
		<result column="create_time" property="createTime" />
		<result column="update_time" property="updateTime" />
		<result column="order_amount" property="orderAmount" />
		<result column="order_score" property="orderScore" />
		<result column="pay_amount" property="payAmount" />
		<result column="buy_number" property="buyNumber" />
	</resultMap>
	
  	<resultMap type="com.pussinboots.morning.os.modules.order.vo.OrderVO" id="OrderVOResultMap">
  		<id column="order_id" property="orderId" />
		<result column="order_number" property="orderNumber" />
		<result column="pay_type" property="payType" />
		<result column="shipment_time" property="shipmentTime" />
		<result column="shipment_type" property="shipmentType" />
		<result column="invoice_type" property="invoiceType" />
		<result column="invoice_title" property="invoiceTitle" />
		<result column="order_status" property="orderStatus" />
		<result column="create_time" property="createTime" />
		<result column="order_amount" property="orderAmount" />
		<result column="order_score" property="orderScore" />
		<result column="pay_amount" property="payAmount" />
    	<collection property="orderProducts" ofType="com.pussinboots.morning.os.modules.order.entity.OrderProduct">
			<result column="product_number" property="productNumber" />
			<result column="name" property="name" />
			<result column="pic_img" property="picImg" />
			<result column="product_spec_number" property="productSpecNumber" />
			<result column="product_spec_name" property="productSpecName" />
			<result column="price" property="price" />
			<result column="score" property="score" />
			<result column="buy_number" property="buyNumber" />
			<result column="product_score" property="productScore" />
			<result column="product_amount" property="productAmount" />
  		</collection>
  	</resultMap>	

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        order_id AS orderId, order_number AS orderNumber, user_id AS userId, pay_type AS payType, shipment_time AS shipmentTime, shipment_type AS shipmentType, shipment_amount AS shipmentAmount, invoice_type AS invoiceType, invoice_title AS invoiceTitle, order_status AS orderStatus, create_time AS createTime, update_time AS updateTime, order_amount AS orderAmount, order_score AS orderScore, pay_amount AS payAmount, buy_number AS buyNumber
    </sql>
    
    <!-- 根据用户ID、订单状态列表、分页信息、搜索内容查找订单列表 -->
    <select id="selectOrderVO" resultMap="OrderVOResultMap">
    	SELECT
    		o.order_id,
    		order_number, 
    		pay_type, 
    		shipment_time, 
    		shipment_type, 
    		invoice_type, 
    		invoice_title, 
    		order_status, 
    		create_time, 
    		order_amount, 
    		order_score, 
    		pay_amount, 
		    product_number, 
		    name, 
		    pic_img, 
		    product_spec_number, 
		    product_spec_name, 
		    price, 
		    score, 
		    p.buy_number, 
		    product_score, 
		    product_amount
    	FROM (
	    	SELECT
	    		*
			FROM
				os_order o
	    	<where>
	    		1=1
	    		<if test="userId != null">
	    			AND user_id = #{userId}
	    		</if>
	    		<if test="typeValue != null">
	    			AND	order_status IN (${typeValue})
	    		</if>
	    		<if test="search != null">
					AND EXISTS (
						SELECT
							NULL
						FROM
							os_order_product p
						WHERE
							o.order_id = p.order_id
			    		AND (
			   				name LIKE '%' #{search} '%' 
			   				OR product_spec_name LIKE '%' #{search} '%' 
			   				OR order_number LIKE '%' #{search} '%' 
			   				OR product_number LIKE '%' #{search} '%'
			    		)
					)
	    		</if>	    		
	    	</where>
	    	ORDER BY o.update_time DESC
	    	LIMIT #{pageInfo.from}, #{pageInfo.size}  	
    	) AS o
    	LEFT JOIN os_order_product p ON o.order_id = p.order_id
    	ORDER BY o.update_time DESC
    </select>
    
    <!-- 根据用户ID、订单状态列表、分页信息、搜索内容查找订单总记录数 -->
    <select id="selectOrderVOCount" resultType="java.lang.Integer">
    	SELECT
    		count(1)
		FROM
			os_order o
    	<where>
    		1=1
    		<if test="userId != null">
    			AND user_id = #{userId}
    		</if>
    		<if test="typeValue != null">
    			AND	order_status IN (${typeValue})
    		</if>
    		<if test="search != null">
				AND EXISTS (
					SELECT
						NULL
					FROM
						os_order_product p
					WHERE
						o.order_id = p.order_id
		    		AND (
		   				name LIKE '%' #{search} '%' 
		   				OR product_spec_name LIKE '%' #{search} '%' 
		   				OR order_number LIKE '%' #{search} '%' 
		   				OR product_number LIKE '%' #{search} '%'
		    		)
				)
    		</if>	    		
    	</where>
    </select>
</mapper>
